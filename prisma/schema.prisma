datasource db {
  provider = "postgres"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  output          = "../node_modules/.prisma/client"
}

model User {
  userId   String @id @default(uuid())
  username String
  password String

  email     String?
  firstName String?
  lastName  String?
  imgUrl    String?
  posts     Post[]

  @@unique([username])
}

