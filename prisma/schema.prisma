datasource db {
  provider = "postgres"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  output          = "../node_modules/.prisma/client"
}

model user {
  userId   String @id @default(uuid())
  username String
  password String

  firstName String
  lastName  String

  email       String?
  imgUrl      String?
  phoneNumber String?

  students student[]

  @@unique([username])
}

model student {
  studentId String @id @default(uuid())

  userId String
  user   user   @relation(fields: [userId], references: [userId], onDelete: Cascade)

  studentNo String
  startDate DateTime
  endDate   DateTime

  attendCount Int
}
