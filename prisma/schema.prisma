datasource db {
  provider = "postgres"
  url      = env("PRISMA_DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
  output          = "../node_modules/.prisma/client"
}

model User {
  userId   String @id @default(uuid())
  username String
  password String

  email     String?
  firstName String?
  lastName  String?
  imgUrl    String?

  @@unique([username])
}

enum TypeAnnouncement {
  internal
  external
}

model Announcement {
  announcementId   String             @id @default(uuid())
  type             String
  title            String
  imageUrl         String
  detail           String
  pubulicDate      DateTime
  endDate          DateTime
  AnnouncementType AnnouncementType[]
}

model AnnouncementType {
  announcementType String           @id @default(uuid())
  type             TypeAnnouncement
  annocementId     String
  announcement     Announcement     @relation(fields: [annocementId], references: [announcementId])
}
